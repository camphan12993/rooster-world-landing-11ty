{
	"ignore": [
		{
			"type": "liquid",
			"begin": "comment",
			"end": "endcomment"
		},
		{
			"type": "html",
			"begin": "script",
			"end": "script"
		},
		{
			"type": "html",
			"begin": "style",
			"end": "style"
		}
	],
	"html": {
		"correct": false,
		"force_attribute": false,
		"braces": false,
		"preserve": 2,
		"unformatted": false,
		"quote_convert": "single"
	},
	"js": {
		"preserve": 1,
		"method_chain": 0,
		"quote_convert": "single",
		"format_array": "indent",
		"format_object": "indent",
		"braces": false,
		"no_semicolon": false,
		"brace_block": true
	},
	"scss": {
		"quote_convert": "single",
		"css_insert_lines": true,
		"preserve": 2,
		"braces": false,
		"brace_block": true
	},
	"css": {
		"css_insert_lines": true,
		"preserve": 2,
		"braces": false,
		"brace_block": true
	},
	"json": {
		"quote_convert": "single",
		"preserve": 0,
		"braces": false,
		"brace_block": true,
		"no_semicolon": true
	}
}
