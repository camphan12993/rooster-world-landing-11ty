<!-- Footer -->
<footer class="footer-area">
  <div class="container">
    <h5 class="text-uppercase text-center">{{footer.title}}</h5>
    <div class="social text-center">
      {% for item in footer.socials %}
        <a href="{{item.url}}">
          <i class="{{item.icon}}"></i>
        </a>
      {% endfor %}
    </div>
    <div class="copyrights text-center">
      <p class="para">
        {{footer.copyRight}}
        | Made by
        <a href="{{footer.madeBy.url}}">
          <span style="color: var(--primary-color);">{{footer.madeBy.author}}</span>
        </a>
      </p>
    </div>
  </div>
</footer>
