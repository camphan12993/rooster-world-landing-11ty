<section class="site-banner mb-20 px-8">
  <div class="container">
    <div class="banner-wrapper w-full rounded-lg overflow-hidden relative">
      <div class="flex transition-margin duration-500" id="banner-inner">
        {% for item in banners %}
          <div class="slide-item relative flex-shrink-0 flex-grow-0" style="background-image: url({{item}})">
            <div class="overlay-filter absolute w-full h-full"></div>
            <div class="absolute bottom-0 w-full">
              <div class="m-auto px-0 pb-12" style="max-width: 80%">
                <h1 class="uppercase mb-4 font-bold text-6xl md:text-5xl text-white text-opacity-100">Rooster World</h1>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="absolute left-0 right-0" style="bottom: 50px">
        <div class=" nav-dots flex flex-row justify-end items-center mx-6 md:mx-12 lg:mx-32">
          {% for banner in banners %}
            <span class="dot block w-3 h-3 bg-white opacity-50 rounded-full mx-1 hover:opacity-100 transition ease-out duration-200" onclick="changeSlide('{{ forloop.index0 }}')"></span>
          {% endfor %}
        </div>
      </div>
      <div onclick="navLeft()" class="absolute top-1/2 w-5 transform -translate-y-1/2 transition opacity-50 duration-200 text-white hover:opacity-100" style="left: 10px">
        <svg aria-hidden="true" data-prefix="fas" data-icon="angle-left" class="svg-inline--fa fa-angle-left fa-w-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512"><path fill="currentColor" d="M31.7 239l136-136c9.4-9.4 24.6-9.4 33.9 0l22.6 22.6c9.4 9.4 9.4 24.6 0 33.9L127.9 256l96.4 96.4c9.4 9.4 9.4 24.6 0 33.9L201.7 409c-9.4 9.4-24.6 9.4-33.9 0l-136-136c-9.5-9.4-9.5-24.6-.1-34z"/></svg>
      </div>
      <div onclick="navRight()" class="absolute top-1/2 w-5 transform -translate-y-1/2 transition opacity-50 duration-200 text-white hover:opacity-100" style="right: 10px">
        <svg aria-hidden="true" data-prefix="fas" data-icon="angle-right" class="svg-inline--fa fa-angle-right fa-w-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512"><path fill="currentColor" d="M224.3 273l-136 136c-9.4 9.4-24.6 9.4-33.9 0l-22.6-22.6c-9.4-9.4-9.4-24.6 0-33.9l96.4-96.4-96.4-96.4c-9.4-9.4-9.4-24.6 0-33.9L54.3 103c9.4-9.4 24.6-9.4 33.9 0l136 136c9.5 9.4 9.5 24.6.1 34z"/></svg>      </div>
    </div>
  </div>
  
</section>