<section class='site-banner px-4 sm:px-8'>
  <div class='container'>
    <div class='swiper-container relative' style='border-radius: 20px;'>
      <div class='swiper-wrapper'>
        {{banner}}
        {% for item in sections.banner.banners %}
          <div class='swiper-slide relative' style='background-image: url({{item.image}})'>
            {% if item.videoUrl and item.videoUrl != '' %}
              <div class='play-btn absolute top-1/2 left-1/2 transition duration-200 transform -translate-x-1/2 -translate-y-1/2 flex items-center justify-center rounded-full p-3 bg-white opacity-75 hover:opacity-50 z-10' onclick='playVideo("{{item.videoUrl}}")'>
                <ion-icon class='text-4xl text-gray-600' name='play-outline'></ion-icon>
              </div>
            {% endif %}
            <div class='absolute inset-0' style='background: linear-gradient(0deg, rgb(0 0 0) 0%, rgb(0 0 0 / 0%) 60%);'></div>
            <div class='absolute bottom-0 w-full'>
              <div class='px-0 pl-10 mx-4 sm:mx-10 pb-16 lg:mx-32 '>
                <div class='relative pl-4 md:pl-6 border-white border-opacity-25 border-l'>
                  <h3 class='text-primary text-sm md:text-lg uppercase text-sha lg:text-xl mb-1'>{{ item.subtitle }}</h3>
                  <h2 class='relative slide-title uppercase font-bold text-xl sm:text-2xl md:text-3xl lg:text-5xl text-white'>
                    {{ item.title }}</h2>
                  <ion-icon class='absolute top-0 h-full left-0 transform -translate-x-full pr-4 md:pr-6 md:text-3xl lg:text-4xl text-white text-opacity-75' name="{{item.icon}}"></ion-icon>
                </div>
              </div>
            </div>
          </div>

        {% endfor %}
      </div>
      <div class='swiper-pagination'></div>
      <div class='hidden sm:block swiper-button-prev text-gray-200'></div>
      <div class='hidden sm:block swiper-button-next text-gray-200'></div>
    </div>
  </div>
</section>
<div class='fixed inset-0 bg-black bg-opacity-25 hidden items-center justify-center' id='video-player' style='z-index: 9999;'>
  <span class='top-0 right-0 m-4 absolute w-3 md:w-6 text-white hover:opacity-75' onclick='closeVideo()'>
    <svg aria-hidden='true' class='svg-inline--fa fa-times fa-w-11' data-icon='times' data-prefix='fas' viewbox='0 0 352 512' xmlns='http://www.w3.org/2000/svg'>
      <path d='M242.72 256l100.07-100.07c12.28-12.28 12.28-32.19 0-44.48l-22.24-22.24c-12.28-12.28-32.19-12.28-44.48 0L176 189.28 75.93 89.21c-12.28-12.28-32.19-12.28-44.48 0L9.21 111.45c-12.28 12.28-12.28 32.19 0 44.48L109.28 256 9.21 356.07c-12.28 12.28-12.28 32.19 0 44.48l22.24 22.24c12.28 12.28 32.2 12.28 44.48 0L176 322.72l100.07 100.07c12.28 12.28 32.2 12.28 44.48 0l22.24-22.24c12.28-12.28 12.28-32.19 0-44.48L242.72 256z' fill='currentColor'/>
    </svg>
  </span>
  <video class='w-4/5 h-auto rounded-lg' controls>
    Error
  </video>
</div>
