---
layout: 'layouts/base.liquid'
---

<section class="site-banner">
  <div class="container h-100">
    <div class="row align-items-center h-100">
      <div class="col-md-6 site-title mb-3 mb-md-0">
        <h3 class="title-text">Welcome to</h3>
        <h1 class="title-text text-uppercase">Rooster World</h1>
        <hr />
      </div>
      <div class="col-md-6 slideshow-container h-100">
        {% for item in banners %}
        <div
          id="slide"
          class="mySlides faded"
          style="background-image: url('{{ item }}')"
        ></div>
        {% endfor %}

        <div class="nav-dots">
          {% for banner in banners %}
          <span
            id="dot"
            class="dot"
            onclick="changeSlide('{{ forloop.index0 }}')"
          ></span>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

<!-- About -->
<section class="content-section bg-light" id="about">
  <div class="container text-center">
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <h2>Rooster World arms to make your ideas come true</h2>
        <p class="lead mb-5">
          We provide multiple services for your upcoming projects
        </p>
        <a class="btn btn-primary btn-xl" href="#services"
          >Explore What We Offer</a
        >
      </div>
    </div>
  </div>
</section>

<!-- Services -->
<section
  class="content-section bg-primary text-white text-center"
  id="services"
>
  <div class="container">
    <div class="content-section-heading">
      <h3 class="text-secondary mb-0">Services</h3>
      <h2 class="mb-5">What We Offer</h2>
    </div>
    <div class="row">
      {% for item in services %}
      <div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
        <div class="service-item rounded-circle mx-auto mb-3">
          <span
            class="service-img"
            style="background-image: url('{{ item.image }}') "
          >
          </span>
        </div>
        <h4>
          <strong>{{ item.name }}</strong>
        </h4>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Callout -->
<section class="callout">
  <div class="overlay"></div>
  <video
    playsinline="playsinline"
    autoplay="autoplay"
    muted="muted"
    loop="loop"
  >
    <source
      src="https://storage.googleapis.com/coverr-main/mp4/Mt_Baker.mp4"
      type="video/mp4"
    />
  </video>
  <div class="container text-center">
    <div
      class="d-flex h-100 text-center align-items-center justify-content-center flex-column"
    >
      <h2 class="mx-auto mb-5 text-light">
        We bring you best products!
      </h2>
      <a class="btn btn-primary btn-xl" href="https://shop.rooster-world.com/"
        >Visit our shop!</a
      >
    </div>
  </div>
</section>

<!-- Portfolio -->
<section class="content-section" id="portfolio">
  <div class="container">
    <div class="content-section-heading text-center">
      <h3 class="text-secondary mb-0">Portfolio</h3>
      <h2 class="mb-5">Recent Projects</h2>
    </div>
    <div class="row no-gutters">
      {% for item in portfolios %}
      <div class="col-lg-6">
        <a class="portfolio-item" href="{{ item.link.url }}">
          <span class="caption">
            <span class="caption-content">
              <h2>{{ item.name }}</h2>
              <p class="mb-0">
                {{ item.description }}
              </p>
            </span>
          </span>
          <img class="img-fluid" src="{{ item.image }}" alt="" />
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
<section class="content-section" id="contact">
  <div class="container">
    <div class="content-section-heading text-center">
      <h2 class="section-heading mb-5">Contact Us</h2>
    </div>

    <form id="contactForm" name="sentMessage" novalidate="novalidate">
      <div class="row align-items-stretch mb-5">
        <div class="col-md-6">
          <div class="form-group">
            <input
              class="form-control"
              id="name"
              type="text"
              placeholder="Your Name *"
              required="required"
              data-validation-required-message="Please enter your name."
            />
            <p class="help-block text-danger"></p>
          </div>
          <div class="form-group">
            <input
              class="form-control"
              id="email"
              type="email"
              placeholder="Your Email *"
              required="required"
              data-validation-required-message="Please enter your email address."
            />
            <p class="help-block text-danger"></p>
          </div>
          <div class="form-group mb-md-0">
            <input
              class="form-control"
              id="phone"
              type="tel"
              placeholder="Your Phone *"
              required="required"
              data-validation-required-message="Please enter your phone number."
            />
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group form-group-textarea mb-md-0">
            <textarea
              class="form-control"
              id="message"
              placeholder="Your Message *"
              required="required"
              data-validation-required-message="Please enter a message."
            ></textarea>
            <p class="help-block text-danger"></p>
          </div>
        </div>
      </div>
      <div class="text-center">
        <div id="success"></div>
        <button
          class="btn btn-secondary btn-xl text-uppercase"
          id="sendMessageButton"
          type="submit"
        >
          Send Message
        </button>
      </div>
    </form>
  </div>
</section>
